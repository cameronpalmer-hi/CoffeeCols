@using Sitecore.Mvc
@using Sitecore.Data.Items
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}
<div id="innercontent" style="width: 921px;">
    <li>
        @foreach (Item item in Model.Item.Children)
        {
            var url = Sitecore.Links.LinkManager.GetItemUrl(item);
            <article class="articlecontent">
                <header>
                    <h2><a href="@url">@Html.Sitecore().Field("ArticleTitle", item)</a></h2>
                    <h3>by - @Html.Sitecore().Field("ArticleAuthor", item)</h3>
                </header>
                <p>@Html.Sitecore().Field("ContentDescription", item)</p>
                <p><a href="@url">Read More..</a></p>
                <hr />
            </article>
        }
    </li>
</div>